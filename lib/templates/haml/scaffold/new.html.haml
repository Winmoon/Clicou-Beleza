.content-header
  .pull-left
    %h2 #{t('actions.create')} #{t('activerecord.models.<%= singular_table_name %>').downcase}
  .pull-right
    = link_to <%= plural_table_name %>_path, class: 'btn tip-bottom', title: t('actions.back') do
      %i.icon-arrow-left
  .clearfix
  %ul.breadcrumb
    %li
      = link_to t('views.home'), root_path
      %span.divider /
    %li
      = link_to t('activerecord.models.<%= singular_table_name %>').pluralize, <%= plural_table_name %>_path
      %span.divider /
    %li.active #{t('actions.create')} #{t('activerecord.models.<%= singular_table_name %>').downcase}  
         
.content-body
  = render 'form'