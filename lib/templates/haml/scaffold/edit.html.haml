.content-header
  .pull-left
    %h2 #{t('actions.edit')} #{t('activerecord.models.<%= singular_table_name %>').downcase} - #{@<%= singular_table_name %>}
  .pull-right
    .btn-group
      = link_to <%= plural_table_name %>_path, class: 'btn', title: t('actions.back') do
        %i.icon-arrow-left
      = link_to @<%= singular_table_name %>, class: 'btn tip-bottom', title: t('actions.show') do
        %i.icon-eye-open
      = link_to new_<%= singular_table_name %>_path, class: 'btn btn-success', title: "#{t('actions.create')} #{t('activerecord.models.<%= singular_table_name %>').downcase}" do
        %i.icon-plus.icon-white
  .clearfix
  
%ul.breadcrumb
  %li
    = link_to t('views.home'), root_path
    %span.divider /
  %li
    = link_to t('activerecord.models.<%= singular_table_name %>').pluralize, <%= plural_table_name %>_path
    %span.divider /
  %li.active #{t('actions.edit')} #{t('activerecord.models.<%= singular_table_name %>').downcase} - #{@<%= singular_table_name %>}

.content-body
  = render 'form'