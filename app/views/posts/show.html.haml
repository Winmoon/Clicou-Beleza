.content-header
  .pull-left
    %h2 #{t('activerecord.models.post')} - #{@post}
  .pull-right
    .btn-group
      = link_to posts_path, class: 'btn', title: t('actions.back') do
        %i.icon-arrow-left
      = link_to edit_post_path(@post), class: 'btn', title: t('actions.edit') do
        %i.icon-edit
      = link_to new_post_path, class: 'btn btn-success', title: "#{t('actions.create')} #{t('activerecord.models.post').downcase}" do
        %i.icon-plus.icon-white
  .clearfix
  %ul.breadcrumb
    %li
      = link_to t('views.home'), root_path
      %span.divider /
    %li
      = link_to t('activerecord.models.post').pluralize, posts_path
      %span.divider /
    %li.active #{t('activerecord.models.post')} - #{@post} 
  
.content-body
  %dt= t('activerecord.attributes.post.user')
  %dd= @post.user
  %dt= t('activerecord.attributes.post.categories')
  %dd= @post.categories
  %dt= t('activerecord.attributes.post.venue')
  %dd= @post.venue
  %dt= t('activerecord.attributes.post.description')
  %dd= @post.description
  %dt= t('activerecord.attributes.post.deleted_at')
  %dd= @post.deleted_at
  